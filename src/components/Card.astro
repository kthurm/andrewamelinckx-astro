---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  img: ImageMetadata;
  title: string;
  class?: string;
}

const { img, title } = Astro.props;
---

<div>
   <Image
    src={img}
    alt={title}
    width={250}
    class="border shadow-[-2px_16px_20px_-12px_rgba(0,0,0,0.75)] w-full max-w-[250px] mx-auto lg:ml-8 lg:mr-0 mb-4"
  />
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-4 font-header">{title}</h3>
    <div class="text-sm">
      <slot />
    </div>
  </div>
</div>